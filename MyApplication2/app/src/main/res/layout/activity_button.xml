    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/activity_my_points_tv"
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_above="@+id/buttons"
        style="@android:style/TextAppearance.Material.Widget.TextView"
        android:layout_marginBottom="5dp"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:id="@+id/buttons"
        android:layout_marginBottom="5dp">

        <com.example.orodr_000.myapplication.FontFitButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/activity_my_variant1_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:onClick="AnswerClick"
            android:translationZ="100dp"
            android:background="#FF5722"
            android:layout_toLeftOf="@+id/animView1"
            android:layout_marginRight="-5dp"
            android:layout_marginBottom="-5dp" />

        <com.example.orodr_000.myapplication.FontFitButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/activity_my_variant2_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:onClick="AnswerClick"
            android:layout_alignParentTop="true"
            android:translationZ="1dp"
            android:background="#3F51B5"
            android:layout_toRightOf="@+id/animView1"
            android:layout_marginLeft="-5dp"
            android:layout_marginBottom="-5dp" />

        <com.example.orodr_000.myapplication.FontFitButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/activity_my_variant3_btn"
            android:layout_below="@+id/animView1"
            android:layout_alignParentStart="true"
            android:onClick="AnswerClick"
            android:layout_marginLeft="5dp"
            android:background="#ffd600"
            android:layout_alignRight="@+id/activity_my_variant1_btn"
            android:layout_marginTop="5dp" />

        <com.example.orodr_000.myapplication.FontFitButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/activity_my_variant4_btn"
            android:layout_alignStart="@+id/activity_my_variant2_btn"
            android:onClick="AnswerClick"
            android:layout_alignRight="@+id/activity_my_variant2_btn"
            android:layout_alignTop="@+id/activity_my_variant3_btn"
            android:background="#4CAF50" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/buttons"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/progressbar_view"
            android:layout_alignParentEnd="false">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/progressBar"
                android:max="45"
                android:progress="45"
                app:rcBackgroundPadding="0dp"
                app:rcBackgroundRadius="0dp"
                app:rcProgress="45"
                app:rcMax="45"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/timer"
                android:id="@+id/timer_tv"
                android:textColor="@color/background"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/progressBar"
                android:layout_alignBottom="@+id/progressBar"
                android:gravity="center" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:id="@+id/buttons"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:text="New Button"
                        android:id="@+id/activity_my_variant1_btn"
                        android:layout_marginLeft="5dp"
                        android:onClick="AnswerClick"
                        android:background="@color/red_button"
                        android:layout_weight="1.0"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:shadowColor="@color/icons"
                        android:padding="3dp"
                        android:textSize="14sp"
                        android:lines="3"
                        android:maxLines="5" />
                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:text="New Button"
                        android:id="@+id/activity_my_variant2_btn"
                        android:layout_marginRight="5dp"
                        android:onClick="AnswerClick"
                        android:textAllCaps="false"
                        android:background="@color/blue_button"
                        android:layout_weight="1.0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textSize="14sp"
                        android:lines="3"
                        android:maxLines="5" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:text="New Button"
                        android:id="@+id/activity_my_variant3_btn"
                        android:onClick="AnswerClick"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        android:background="@color/yellow_button"
                        android:layout_weight="1.0"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textSize="14sp"
                        android:lines="3"
                        android:maxLines="5" />

                    <Button
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:text="New Button"
                        android:id="@+id/activity_my_variant4_btn"
                        android:onClick="AnswerClick"
                        android:textAllCaps="false"
                        android:layout_marginRight="5dp"
                        android:background="@color/green_button"
                        android:layout_weight="1.0"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textSize="14sp"
                        android:lines="3"
                        android:maxLines="5" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/animView1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:elevation="6dp" />
            <View
                android:id="@+id/animView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="6dp"
                android:onClick="onPauseClick" />
        </RelativeLayout>

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.example.orodr_000.myapplication.FirstFragment"
            android:id="@+id/fragment"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:layout="@layout/fragment_first"
            android:layout_above="@+id/buttons"
            android:layout_alignLeft="@+id/buttons"
            android:layout_alignRight="@+id/buttons"
            android:layout_marginBottom="5dp" />


    </RelativeLayout>

    <View
        android:id="@+id/transitionElement2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#673AB7"
        android:elevation="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:visibility="invisible"
        android:focusableInTouchMode="false" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.orodr_000.myapplication.RevealFragment"
        android:id="@+id/fragment3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_reveal" />



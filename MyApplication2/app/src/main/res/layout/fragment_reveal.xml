<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.piskovets.fantasticguessingtournament.RevealFragment"
        android:id="@+id/reveal">

        <!-- TODO: Update blank fragment layout -->
        <com.piskovets.fantasticguessingtournament.FontFitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:layout_gravity="center"
            android:textSize="48dp"
            android:id="@+id/theme_name_tv"
            android:textColor="#ffffffff"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/progressBar2"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            wheel:matProg_barColor="#388E3C"
            wheel:matProg_progressIndeterminate="true"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Loading pictures...."
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:id="@+id/textView2"
            android:textColor="@color/icons" />


    </FrameLayout>
</io.codetail.widget.RevealFrameLayout>